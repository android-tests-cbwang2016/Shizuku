<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.Light" />

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:foreground">@drawable/material_button_outline_foreground</item>
        <item name="android:background">@drawable/material_button_outline_background_dark</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <style name="Card.Light">
        <item name="android:background">@drawable/material_button_outline_background</item>
    </style>

    <style name="CardButton">
        <item name="android:background">@drawable/card_btn_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">28dp</item>
        <item name="android:textColor">?appColorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:drawableTint">?appColorPrimary</item>
        <item name="android:drawableTintMode">src_in</item>
    </style>

    <style name="CardTitle">
        <item name="android:textAppearance">?textAppearanceSubtitle1</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
    </style>

    <style name="CardSummary">
        <item name="android:textAppearance">?textAppearanceBody2</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
    </style>

    <style name="GrantPermissions" parent="@style/AppTheme">
        <item name="android:colorBackground">?colorBackgroundFloating</item>
        <item name="android:colorBackgroundCacheHint">@null</item>

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="MaterialCircleIconViewLight">
        <item name="iconForegroundChroma">600</item>
        <item name="iconBackgroundChroma">50</item>
        <item name="android:background">@drawable/shape_circle_icon_background</item>
        <item name="android:tintMode">src_in</item>
        <item name="android:backgroundTintMode">src_in</item>
    </style>

    <style name="MaterialCircleIconViewDark">
        <item name="iconForegroundChroma">100</item>
        <item name="iconBackgroundChroma">600</item>
        <item name="android:background">@drawable/shape_circle_icon_background</item>
        <item name="android:tintMode">src_in</item>
        <item name="android:backgroundTintMode">src_in</item>
    </style>

    <style name="TerminalTutorialText">
        <item name="android:textAppearance">?textAppearanceBody2</item>
        <item name="android:lineSpacingExtra">1sp</item>
    </style>

</resources>